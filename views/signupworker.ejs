  <body class="text-center">
    
<main class="form-signin w-100 h-100 m-auto">
  <form action = '/signup' method="post" id = "signup-form">
    <h1 class="h3 mb-4 fw-normal">Please sign up as worker</h1>

    <input type="hidden" name="role" value = "worker">

    <div class="form-floating">
      <input type="text" class="form-control my-1" id="floatingInput" name = "username" placeholder="Username"  required>
      <label for="floatingInput">Username</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control my-1" id="password1" name = "password1" placeholder="Password" required>
      <label for="floatingPassword">Password</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control my-1" id="password2" name = "password2" placeholder="Password" required>
      <label for="floatingPassword">Re-Enter Password</label>
    </div>

    
    <div class="form-floating">
      <input type="text" class="form-control my-1" id="floatingInput2" name = "mobile" placeholder="Mobile" required>
      <label for="floatingInput">Mobile</label>
    </div>

    <select class="form-select" aria-label="Default select example" name="category">
      <option selected>Select Work Category</option>
      <option value="AC/Refrigerator">AC/Refrigerator</option>
      <option value="Mobile Phones">Mobile Phones</option>
      <option value="Laptops">Laptops</option>
    </select>

    <button class="w-100 btn btn-lg btn-primary my-1" type="submit">Sign Up</button>

    <small class="text-danger" id="danger-message"></small>

    <div class="footer w-100 mt-5">
        <a class="text-muted text-left" href="/loginworker">Already Signed Up? Login</a>
        <p class="mt-3 text-muted">&copy; 2017â€“2022</p>

    </div>
  </form>
</main>
    
